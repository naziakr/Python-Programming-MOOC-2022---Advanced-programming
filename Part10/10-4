import random

class WordGame():
    def __init__(self, rounds: int):
        self.wins1 = 0
        self.wins2 = 0
        self.rounds = rounds

    def round_winner(self, player1_word: str, player2_word: str):
        # determine a random winner
        return random.randint(1, 2)

    def play(self):
        print("Word game:")
        for i in range(1, self.rounds+1):
            print(f"round {i}")
            answer1 = input("player1: ")
            answer2 = input("player2: ")

            if self.round_winner(answer1, answer2) == 1:
                self.wins1 += 1
                print("player 1 won")
            elif self.round_winner(answer1, answer2) == 2:
                self.wins2 += 1
                print("player 2 won")
            else:
                pass # it's a tie

        print("game over, wins:")
        print(f"player 1: {self.wins1}")
        print(f"player 2: {self.wins2}")

class LongestWord(WordGame):
    def  __init__(self, rounds: int):
        super().__init__(rounds)

    def round_winner(self, player1_word: str, player2_word: str):
        if len(player1_word) > len(player2_word):
            return 1
        
        elif len(player1_word) < len(player2_word):
            return 2
        else:
            pass


class MostVowels(WordGame):
    def  __init__(self, rounds: int):
        super().__init__(rounds)


    def round_winner(self, player1_word: str, player2_word: str):
        vowels = "aeiou"
        player1 = []
        player2 = []
        for i in player1_word:
            if i in vowels:
                player1.append(i)
        for j in player2_word:
            if j in vowels:
                player2.append(j)
        if len(player1)>len(player2):
            return 1
        elif len(player1)<len(player2):
            return 2
        else: pass

class RockPaperScissors(WordGame):
    def __init__(self, rounds: int):
        super().__init__(rounds)

    def round_winner(self, player1_word: str, player2_word: str):
        rock_paper_scissors = ["rock", "paper", "scissors"]

        if player2_word not in rock_paper_scissors and player1_word not in rock_paper_scissors:
            return None
            
        if player1_word not in rock_paper_scissors:
            return 2   
        if player2_word not in rock_paper_scissors:
            return 1    

        if player1_word == "rock" and player2_word == "scissors":
            return 1
        elif player1_word == "scissors" and player2_word == "paper":
            return 1
        elif player1_word == "paper" and player2_word == "rock":
            return 1
        elif player1_word == player2_word:
            return None

        else:
            return 2

